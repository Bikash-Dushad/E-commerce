<link rel="stylesheet" href="/css/add_products.css">

<%- include('_admin_header'); %>
<h1>Update Product</h1>
<div class="productForm">
    <form action="/products/updateProduct/<%= product._id %>" method="post" enctype="multipart/form-data">
        <table>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Image</th>
                <th>Category</th>
                <th>Size</th>
                <th></th>
            </tr>
            <tr>
                <td><input type="text" id="name" name="name" value="<%= product.name %>" required></td>
                <td><textarea id="desc" name="desc" required><%= product.desc %></textarea></td>
                <td><input type="text" id="price" name="price" value="<%= product.price %>" required></td>
                <td><input type="file" id="image" name="image" required></td>
                <td><input type="text" id="category" name="category" value="<%= product.category %>" required></td>
                <td>
                    <select id="sizes" name="sizes" multiple>
                        <option value="M" <%= product.sizes.includes('M') ? 'selected' : '' %>>M</option>
                        <option value="XL" <%= product.sizes.includes('XL') ? 'selected' : '' %>>XL</option>
                        <option value="S" <%= product.sizes.includes('S') ? 'selected' : '' %>>S</option>
                    </select>
                </td>
                <td><button type="submit">Update Product</button></td>
            </tr>
        </table>
    </form>
</div>