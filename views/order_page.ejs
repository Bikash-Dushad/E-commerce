<link rel="stylesheet" href="/css/orders.css">

<%- include('_header'); %>
<h1>Your Orders</h1>

<div class="orders">
    <% if (orders.length === 0) { %>
        <p>You have no orders.</p>
    <% } else { %>
        <table>
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Products</th>
                    <th>Total Price</th>
                    <th>Status</th>
                    <th>Order Date</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach(order => { %>
                    <tr>
                        <td><%= order._id %></td>
                        <td>
                            <ul>
                                <% order.products.forEach(product => { %>
                                    <li><%= product.name %> - $<%= product.price %></li>
                                <% }); %>
                            </ul>
                        </td>
                        <td>$<%= order.totalPrice %></td>
                        <td><%= order.status %></td>
                        <td><%= order.createdAt.toDateString() %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } %>
</div>
